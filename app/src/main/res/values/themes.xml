<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NMedia" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Widget.AppTheme.Like" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="icon">@drawable/ic_like_24dp</item>
        <item name="iconTint">@color/like_checkbox_tint</item>
        <item name="android:minWidth">@dimen/icon</item>
        <item name="android:minHeight">@dimen/icon</item>
    </style>

    <style name="Widget.AppTheme.Share" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="icon">@drawable/ic_baseline_reply_24</item>
        <item name="iconTint">@color/share_checkbox</item>
        <item name="android:minWidth">@dimen/icon</item>
        <item name="android:minHeight">@dimen/icon</item>
    </style>

    <style name="Widget.AppTheme.Eyes" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="icon">@drawable/ic_baseline_remove_red_eye_24</item>
        <item name="iconTint">@color/eyes</item>
        <item name="android:minWidth">@dimen/icon</item>
        <item name="android:minHeight">@dimen/icon</item>
    </style>

    <style name="Widget.AppTheme.Menu" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="icon">@drawable/ic_baseline_list_24</item>
        <item name="iconTint">@color/eyes</item>
        <item name="android:minWidth">@dimen/icon</item>
        <item name="android:minHeight">@dimen/icon</item>
    </style>
</resources>